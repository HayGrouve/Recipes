<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ceko's Recipes</title>
    <!-- FONTAWESOME -->
    <link rel="stylesheet" href="/stylesheets/fontawesome/css/all.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet">
    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="/stylesheets/main.css">
    <script src="/scripts/lib/jQuery 3.4.1.js"></script>
</head>

<body>
    <div id="navbar">
		<div>
            <a class="logo" href="/"><i class="fas fa-utensils logo-icon"></i></a>
        </div>
        <div></div>
        <div id="nav-logs">
            <% if(!currentUser){ %>
            <a class="logo" href="/register"><i class="fas fa-user-plus"></i> Sign Up</a>
            <a class="logo" href="/login"><i class="fas fa-user"></i> Login</a>
            <% } %>
            <% if(currentUser){ %>
            <a href=""><i class="fas fa-user"></i><%= currentUser.username %></a>
            <a class="logo" href="/logout"><i class="fas fa-user-times"></i> Logout</a>
            <% } %>
        </div>
    </div>

    <div class="container flash">
        <% if(error && error.length > 0){ %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>

        <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>

    <div id="container">