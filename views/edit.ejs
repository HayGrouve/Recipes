<%- include('partials/header.ejs') %>
<% if(recipe.img !== ''){ %>
<img src="<%= recipe.img %>">
<% } %>
<section>
    <form action="/recipe/update/<%= recipe.id%>" method="post">
        <article>
            <h4>Заглавие:</h4>
            <input type="text" name="recipe[title]" value="<%= recipe.title %>">
        </article>
        <article>
            <h4>Продукти:</h4>
            <textarea class="ingredients" name="recipe[ingredients]" cols="30"
                rows="10"><%= recipe.ingredients %></textarea>
        </article>
        <hr>
        <article>
            <h4>Начин на приготвяне:</h4>
            <textarea name="recipe[recipe]" cols="30" rows="10"><%= recipe.recipe %></textarea>
        </article>
        <hr>
        <article>
            <h4>Ресурс:</h4>
            <input type="text" name="recipe[url]" value="<%= recipe.url %>" placeholder="Url">
            <h4>Снимка:</h4>
            <input type="text" name="recipe[img]" value="<%= recipe.img %>" placeholder="Img">
        </article>
        <input type="submit" value="Редактирай">
        <div class="edit-home-btn">
            <a href='/'>Начало</a>
        </div>
    </form>
</section>
<%- include('partials/footer.ejs') %>